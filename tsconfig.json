{
   "compilerOptions": {
      "outDir": "./dist/",
      "module": "es6",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
         "@pages": ["src/pages"],
         "@components": ["src/components"],
         "@interfaces": ["src/interfaces"],
         "@router": ["src/router"],
         "@socket-namespaces": ["src/socket-namespaces"],
         "@store": ["src/store"],
         "@store/*": ["src/store/*"],
         "@reducers": ["src/store/reducers"],
         "@hooks": ["src/hooks"],
         "@utils": ["src/utils"],
         "@stylesheets": ["src/stylesheets"]
      }
   },
}
